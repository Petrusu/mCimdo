<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingInActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sing In"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151"
        android:textColor="#69516B"/>

    <EditText
        android:id="@+id/loginEdit"
        android:layout_width="257dp"
        android:layout_height="71dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="108dp"
        android:hint="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:textColor="#69516B"
        android:backgroundTint="#69516B"
        />

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="257dp"
        android:layout_height="71dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="64dp"
        android:hint="Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginEdit"
        android:textColor="#69516B"
        android:backgroundTint="#69516B" />

    <Button
        android:id="@+id/btn_singin"
        android:layout_width="198dp"
        android:layout_height="61dp"
        android:layout_marginBottom="156dp"
        android:backgroundTint="#52756F"
        android:text="SingIn"
        android:textColor="#E7F2E8"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEdit"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>